options {
        allow-query { any; };
        listen-on port 53 { any; };
        directory       "/var/named";
        dump-file       "/var/named/data/cache_dump.db";
        statistics-file "/var/named/data/named_stats.txt";
        memstatistics-file "/var/named/data/named_mem_stats.txt";

        recursion yes;
        
        forwarders {
          193.218.104.190; // ns3.swisstxt.ch
          193.218.103.253; // ns4.swisstxt.ch
          10.131.129.10;   // zh-ns1.media.int
          10.157.129.10;   // be-ns1.media.int
        };
        allow-transfer { "193.218.104.190"; "193.218.103.253"; };
        also-notify { "193.218.104.190"; "193.218.103.253"; };

        dnssec-enable yes;
        dnssec-validation yes;
        dnssec-lookaside auto;

        /* Path to ISC DLV key */
        bindkeys-file "/etc/named.iscdlv.key";

        managed-keys-directory "/var/named/dynamic";
};

logging {
        channel default_debug {
                file "data/named.run";
                severity dynamic;
        };
};

zone "." IN {
        type hint;
        file "named.ca";
};

zone "media.int" {
   // Special zone managed by CSP IT (SRG)
   // required to resolve polisapi.media.int for example
   type forward;
   forward only;
   forwarders {
     10.131.129.10; // zh-ns1.media.int
     10.157.129.10; // be-ns1.media.int
   };
};

include "/etc/named.rfc1912.zones";
include "/etc/named.root.key";
include "/etc/named.conf.local";
